{
  "manifest_version": 3,
  "name": "Simple AI Copilot",
  "version": "1.0.1",
  "description": "A simple AI copilot with OpenAI-compatible API support and intelligent page operations",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https: data: blob: http://localhost:* http://127.0.0.1:*;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Simple AI Copilot"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "popup.html"],
      "matches": ["*://*/*"]
    }
  ]
}